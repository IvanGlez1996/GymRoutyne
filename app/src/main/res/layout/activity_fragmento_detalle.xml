<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:app="http://schemas.android.com/apk/res-auto"
			 xmlns:tools="http://schemas.android.com/tools"

			 android:layout_width="match_parent"
			 android:layout_height="match_parent">

	<LinearLayout
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:orientation="vertical">
	<LinearLayout
		android:id="@+id/contenedorNombres_columnas"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:gravity="center_vertical"
		android:background="@color/colorPrimary"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/columna_nombre_ejercicio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:layout_marginLeft="28dp"
			android:textColor="@android:color/white"
			android:text="Nombre"
			android:layout_gravity="left|center_vertical"
			android:layout_weight="1"
			/>

		<TextView
			android:id="@+id/columna_sets"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:layout_marginLeft="70dp"
			android:layout_gravity="center|center_vertical"
			android:layout_weight="1"
			android:textColor="@android:color/white"
			android:text="Sets"/>

		<TextView
			android:id="@+id/columna_reps"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:layout_marginLeft="21dp"
			android:layout_gravity="right|center_vertical"
			android:layout_weight="1"
			android:textColor="@android:color/white"
			android:text="Reps"/>

	</LinearLayout>
	<!-- Al añadir un objeto RecyclerView, hay que añadir la librería de soporte recyclerview-v7-->
	<android.support.v7.widget.RecyclerView
		android:id="@+id/lista_detalle"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="16dp"
		app:layoutManager="LinearLayoutManager" />
	</LinearLayout>
</FrameLayout>


